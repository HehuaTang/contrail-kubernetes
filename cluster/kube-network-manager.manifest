{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "kube-network-manager"
    },
    "spec": {
        "containers": [
            {
                "command": [
                    "/go/kube-network-manager"
                ],
                "image": "opencontrail/kube-network-manager",
                "name": "kube-network-manager",
                "volumeMounts": [
                    {
                        "mountPath": "/etc/kubernetes",
                        "name": "kubernetes-config"
                    },
                    {
                        "mountPath": "/etc/contrail",
                        "name": "contrail-config"
                    },
                    {
                        "mountPath": "/var/log/contrail",
                        "name": "logs",
                        "readOnly": false
                    }
                ]
            }
        ],
        "hostNetwork": true,
        "volumes": [
            {
                "hostPath": {
                    "path": "/etc/kubernetes"
                },
                "name": "kubernetes-config"
            },
            {
                "hostPath": {
                    "path": "/etc/contrail"
                },
                "name": "contrail-config"
            },
            {
                "hostPath": {
                    "path": "/var/log/contrail"
                },
                "name": "logs"
            }
        ]
    }
}
